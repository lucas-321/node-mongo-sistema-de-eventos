{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar Igreja</h4>
        <form name="editIgreja" action="/admin/igreja/edit" method="POST">
            <input type="hidden" value="{{igreja._id}}" name="id">
            <label for="nome">Nome:</label>
            <input type="text" name="nome" class="form-control" value="{{igreja.nome}}" required>
            <label for="sigla">Sigla:</label>
            <input type="text" name="sigla" class="form-control" value="{{igreja.sigla}}" required>
            <label for="local">Cidade:</label>
            <select name="local" id="local" class="form-control custom-select">
                {{#each cidades}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhum tipo de cidade registrada</option>
                {{/each}}
            </select><br>

            <label for="telefone">Telefone:</label>
            <input type="text" name="telefone" class="form-control" value="{{igreja.telefone}}">
            <label for="email">Email:</label>
            <input type="email" name="email" class="form-control" value="{{igreja.email}}">

            <label for="associacao">Associação: </label>
            <select name="associacao" id="associacao" class="form-control custom-select">
                {{#each associacoes}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma associação registrado</option>
                {{/each}}
            </select><br>
            
            <button class="btn btn-success mt-2" type="submit">Salvar</button>
        </form>
    </div>
</div>

<script>
  document.getElementById('associacao').value = "{{igreja.associacao}}";
  document.getElementById('local').value = "{{igreja.local}}";
</script>