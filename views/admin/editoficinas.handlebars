{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar Oficina</h4>
        <form name="editOficina" action="/admin/oficina/edit" method="POST">
            <input type="hidden" value="{{oficina._id}}" name="id">
            <label for="titulo">Tema:</label>
            <input type="text" name="titulo" class="form-control" value="{{oficina.titulo}}" required>
            <label for="quantidadeInscritos">Quantidade de Inscritos:</label>
            <input type="text" name="quantidadeInscritos" class="form-control" value="{{oficina.quantidadeInscritos}}" required>
            
            <label for="preletor">Preletor:</label>
            <select name="preletor" id="preletor" class="form-control custom-select">
                {{#each preletores}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhum tipo de preletor registrada</option>
                {{/each}}
            </select><br>

            <label for="evento">Evento: </label>
            <select name="evento" id="evento" class="form-control custom-select">
                {{#each eventos}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhum evento registrado</option>
                {{/each}}
            </select><br>
            
            <button class="btn btn-success mt-2" type="submit">Salvar</button>
        </form>
    </div>
</div>

<script>
  document.getElementById('evento').value = "{{oficina.evento}}";
  document.getElementById('preletor').value = "{{oficina.preletor}}";
</script>