{{#each editErros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h4>Editar Cidade</h4>
<div class="card">
    <div class="card-body">
        <form action="/admin/cidades/edit" method="POST">
                <input type="hidden" name="id" value="{{cidade._id}}">
                <label for="nome">Nome: </label> 
                <input type="text" id="nome" name="nome" placeholder="Nome da Cidade" class="form-control" value="{{cidade.nome}}">
                <br>
                <button type="submit" class="btn btn-success">Salvar</button>
        </form>
    </div>
</div>